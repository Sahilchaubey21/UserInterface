    <script>
        function toggleView(id) {
            const project = document.getElementById(id);
            const viewMore = project.querySelector('.view-more');
            const viewLess = project.querySelector('.view-less');
            
            project.style.maxHeight = project.style.maxHeight ? null : project.scrollHeight + "px";
            viewMore.style.display = viewMore.style.display === 'none' ? 'block' : 'none';
            viewLess.style.display = viewLess.style.display === 'none' ? 'block' : 'none';
        }
    </script>
